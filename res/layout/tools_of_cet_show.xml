<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="2"
            android:gravity="end|center_vertical"
            android:text="考生姓名：" />

        <TextView
            android:id="@+id/cet_show_student"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="2"
            android:gravity="start|center_vertical" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="2"
            android:gravity="end|center_vertical"
            android:text="学校：" />

        <TextView
            android:id="@+id/cet_show_school"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="3"
            android:gravity="start|center_vertical" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="2"
            android:gravity="end|center_vertical"
            android:text="考试类别：" />

        <TextView
            android:id="@+id/cet_show_level"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="2"
            android:gravity="start|center_vertical" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="2"
            android:gravity="end|center_vertical"
            android:text="准考证号：" />

        <TextView
            android:id="@+id/cet_show_id"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="3"
            android:gravity="start|center_vertical" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="2"
            android:gravity="end|center_vertical"
            android:text="您的成绩总分：" />

        <TextView
            android:id="@+id/cet_show_totalpoints"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="2"
            android:gravity="start|center_vertical" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="2"
            android:gravity="end|center_vertical"
            android:text="听力：" />

        <TextView
            android:id="@+id/cet_show_hearing"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="2"
            android:gravity="start|center_vertical" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="2"
            android:gravity="end|center_vertical"
            android:text="阅读：" />

        <TextView
            android:id="@+id/cet_show_reading"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="2"
            android:gravity="start|center_vertical" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="2"
            android:gravity="end|center_vertical"
            android:text="写作和翻译：" />

        <TextView
            android:id="@+id/cet_show_writing"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="2"
            android:gravity="start|center_vertical" />
    </TableRow>

</TableLayout>