<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/setting_about_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/springgreen" >

        <ImageButton
            android:id="@+id/setting_about_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@drawable/button"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/setting_about_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/setting_about_back"
            android:gravity="center"
            android:textSize="18sp"
            android:text="关于助手" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/setting_about_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/setting_about_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:src="@drawable/account_icon_2" />

        <TextView
            android:id="@+id/setting_about_version_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/setting_about_icon"
            android:layout_alignRight="@id/setting_about_icon"
            android:layout_below="@id/setting_about_icon"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="版本号:16.1.0" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/setting_about_fundation"
        style="@style/kb_info_item_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp" >

        <TextView
            android:id="@+id/setting_about_fundation_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="功能介绍" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/border" />

    <RelativeLayout
        android:id="@+id/setting_about_problem"
        style="@style/kb_info_item_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp" >

        <TextView
            android:id="@+id/setting_about_problem_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="问题帮助" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/border" />

    <RelativeLayout
        android:id="@+id/setting_about_checkversion"
        style="@style/kb_info_item_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp" >

        <TextView
            android:id="@+id/setting_about_checkversion_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="检查更新" />
    </RelativeLayout>

</LinearLayout>